{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/tickets/:id/comment",  "destination": "/api/tickets.js?comment=1&id=:id" },
    { "source": "/api/tickets/:id/comments", "destination": "/api/tickets.js?comments=1&id=:id" },
    { "source": "/api/tickets/:id",          "destination": "/api/tickets.js?id=:id" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
